<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#edf2fb"
    tools:context=".DetailNotes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DETAIL PENGADUAN"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:fontFamily="@font/poppinsemibold"
            android:textColor="#05299E"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/NamaFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengadu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/border_isi"
            android:padding="10dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Nama Pengadu"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/JudulFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Aduan"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_isi"
            android:padding="30dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="Judul Aduan "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/AduanFix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Aduan"
            android:fontFamily="@font/poppinsregular"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/aduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_isi"
            android:padding="70dp"
            android:paddingStart="20dp"
            android:text="Isi Aduan"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:fontFamily="@font/poppinsregular"
                android:textSize="14sp"
                android:backgroundTint="@color/blue" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:fontFamily="@font/poppinsregular"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="14sp"
                android:backgroundTint="@color/red" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
